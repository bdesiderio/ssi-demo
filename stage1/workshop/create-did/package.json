{
    "private": true,
    "name": "extrimian",
    "version": "1.0.0",
    "workspaces": [
        "packages/extrimian-npm/packages/ethr/**",
        "packages/extrimian-npm/packages/did/core",
        "packages/extrimian-npm/packages/did/resolver",
        "packages/extrimian-npm/packages/did/registry",
        "packages/extrimian-npm/packages/core/**",
        "packages/extrimian-npm/packages/dwn-client/**",
        "packages/extrimian-npm/packages/vc/core",
        "packages/extrimian-npm/packages/kms/core",
        "packages/extrimian-npm/packages/vc/**",
        "packages/extrimian-npm/packages/kms/suite/vc/jsonld",
        "packages/extrimian-npm/packages/kms/suite/**",
        "packages/extrimian-npm/packages/kms/client",
        "packages/create-did-example",
        "packages/create-did"
    ],
    "scripts": {
        "start": "yarn workspace create-did start",
        "build:all": "yarn workspaces run build",
        "clean": "find . \\( -name 'node_modules' -o -name 'dist' -o -name 'lib' \\) -type d -prune -exec rm -rf '{}' +"
    },
    "dependencies": {
        "@types/node": "^17.0.41"
    }
}